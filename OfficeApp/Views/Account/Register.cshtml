
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="gradient-bg flex items-center justify-center min-h-screen p-4">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md border border-gray-100" id="auth-container">

        <div id="signup-form-container">
            <div class="text-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Create Account</h2>
                <p class="text-gray-600 text-sm">Fill in your details to register</p>
            </div>

            <form asp-action="Register" id="signup-form" class="space-y-4">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Username" class="block text-sm font-semibold text-gray-700 mb-1">Userame</label>
                    <input asp-for="Username" id="signup-email" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm">
                    <span asp-validation-for="Username"></span>
                </div>
                <div>
                    <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                    <input asp-for="Password" id="signup-password" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm">
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" id="signup-confirm-password" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 mt-6">
                    Create Account
                </button>
            </form>

            <p class="text-center text-gray-600 text-sm mt-6">
                Already have an account?
                <a asp-action="Login" id="login-link-signup" data-container="signin-form-container" class="text-blue-600 hover:text-blue-800 font-semibold">
                    Log In
                </a>
            </p>
        </div>
    </div>
</div>